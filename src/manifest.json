{
  "name": "Auto Archiver",
  "description": "Automatically replace whitelisted websites with archived versions",
  "version": "0.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
